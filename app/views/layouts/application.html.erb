<!DOCTYPE html>
<html>
<head>
  <title>Potholes</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <% if "#{controller_name} #{action_name}" == "map show"%>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=<%= ENV["google_maps"] %>"></script>
    <script>
      function initialize() {
        var mapOptions = {
          center: { lat: <%= @current_location[0] %>, lng: <%= @current_location[1] %>},
          zoom: 18
        };
        var map = new google.maps.Map(document.getElementById('map-holder'),
            mapOptions);
        var locations = <%= @locations %>;
        placeAllMarkers(map, locations);
      }
      google.maps.event.addDomListener(window, 'load', initialize);
    </script>
  <% end %>
      
</head>
<body>

<%= yield %>

</body>
</html>
